{
  "name": "ecc0",
  "version": "1.0.0",
  "description": "Audio Conversion Boiler Plate",
  "main": "public/main.js",
  "scripts": {
    "electron": "electron public/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-electron": "electron-builder"
  },
  "build": {
    "extends": null,
    "asar": false,
    "appId": "",
    "productName": "Ecc0",
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "public/icon.png",
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist"
    },
    "files": [
      "public/**/*",
      "resources/**/*"
    ],
    "dmg": {
      "sign": false
    }
  },
  "author": "NCal",
  "license": "GPL-2.0-only",
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3",
    "fs": "0.0.1-security",
    "os": "^0.1.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^30.1.1",
    "electron-builder": "^24.13.3"
  }
}
